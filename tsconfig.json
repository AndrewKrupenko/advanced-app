{
  "compilerOptions": {
    // fore absolute imports
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./dist/",
    // do not use 'any' as a default option
    "noImplicitAny": true,
    "module": "ESNext",
    // to support almost all browsers
    "target": "es5",
    "jsx": "react-jsx",
    // compile not only TS files, but also JS
    "allowJs": true,
    "moduleResolution": "node",
    // to use usual imports
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}
